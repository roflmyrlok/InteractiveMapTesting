{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "${REVIEWSERVICE_CONNECTION_STRING}"
  },
  "Jwt": {
    "Key": "${JWT_KEY}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}"
  },
  "Services": {
    "LocationService": {
      "BaseUrl": "${REVIEWSERVICE_LOCATIONSERVICE_URL}"
    }
  },
  "S3": {
    "AccessKey": "${AWS_ACCESS_KEY_ID}",
    "SecretKey": "${AWS_SECRET_ACCESS_KEY}",
    "BucketName": "${S3_BUCKET_NAME}",
    "Region": "${S3_REGION}",
    "BaseUrl": "${S3_BASE_URL}",
    "MaxFileSizeInMB": "${S3_MAX_FILE_SIZE_MB}",
    "AllowedFileTypes": ["image/jpeg", "image/jpg", "image/png", "image/gif", "image/webp"]
  }
}